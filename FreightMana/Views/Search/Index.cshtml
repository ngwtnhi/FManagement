@model List<Order>
<!DOCTYPE html>
<html>

<head>
    <!-- Basic -->
    <meta charset="utf-8" />
    <link rel="icon" href="~/img/fevicon.png" type="image/x-icon">
    <title> FINANCE | SEARCH </title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/css/base.css">
    <link rel="stylesheet" href="~/css/Customer/nab_bar.css">
    <link rel="stylesheet" href="~/css/Customer/search.css">
    <link rel="stylesheet" href="~/css/Customer/footer.css">

</head>
<body class="sub_page">
    <div class="hero_area">
        <header class="header_section">
            <div class="header_top">
            </div>
            <div class="header_bottom">
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg custom_nav-container ">
                        <div class="logo"><img src="~/img/logo.png" alt=""></div>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav ">
                                <li class="nav-item active">
                                    <a class="nav-link" href="@Url.Action("Index", "Home")">Trang chủ<span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "OurService")">Dịch vụ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "AboutUs")" style="color: var(--turquoise-color);">Về chúng tôi</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "Price")">Giá cả</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "ContactUs")">Liên hệ</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Index", "LoginCustomer")"><i class="fa-solid fa-user"></i><span style="margin-left: 5px;"> Đăng nhập</span></a>
                                </li>
                                <form class="form-inline">
                                    <a href="/Home#searchForm">
                                        <button class="btn nav_search-btn" type="button"> <i class="fa fa-search" aria-hidden="true"></i></button>
                                    </a>
                                </form>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
    </div>
    </header>
    </div>


    <section class="track_section layout_padding">
        <div class="track_bg_box">
            <img src="~/img/track-bg.jpg" alt="">
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <div class="heading_container">
                        <h2>
                            Tìm kiếm đơn hàng của bạn
                        </h2>
                    </div>
                    <br>
                    <form action="/Search/Search" method="post">
                        <input type="text" placeholder="Nhập mã đơn hàng bạn cần tra cứu" name="orderID" />
                        <button type="submit">
                            Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
    <section class="search-order">
        <div class="search-backgr">
            <table>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th style="width: 450px;">Họ tên</th>
                    <th>Số điện thoại</th>
                    <th style="width: 950px;">Địa chỉ</th>
                    <th>Cước phí</th>
                    <th>Tổng tiền</th>
                    <th>Trạng thái</th>
                </tr>
                @if (Model!=null)
                {
                        foreach(var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.Sender.Name</td>
                            <td>@order.Sender.PhoneNumber</td>
                            <td>@order.Sender.Address</td>
                            <td>@order.TransportFee</td>
                            <td>@(order.TransportFee + order.Cod)</td>
                            <td>@order.Status</td>
                        </tr>
                    }
                    @if (Model.Count == 0)
                    {
                        <span style="color:red">Không tìm thấy đơn hàng !</span>
                    }

                }
                

            </table>
        </div>
    </section>


    <section class="info_section layout_padding2">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 info_col">
                    <div class="info_contact">
                        <h4>Địa chỉ</h4>
                        <div class="contact_link_box">
                            <a href=""><i class="fa fa-map-marker" aria-hidden="true"></i><span>Yên Nghĩa, Hà Đông, Hà Nội</span></a>
                            <a href=""><i class="fa fa-phone" aria-hidden="true"></i><span>Call +84 123456789</span></a>
                            <a href=""><i class="fa fa-envelope" aria-hidden="true"></i><span>finance@gmail.com</span></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 info_col">
                    <div class="info_detail">
                        <h4>Thông tin</h4>
                        <p>Dịch vụ vận chuyển hàng hóa của chúng tôi được tạo ra dành riêng cho các doanh nghiệp vừa và nhỏ đang tìm kiếm cách để nâng cao hiệu suất hoạt động của mình.</p>
                    </div>
                </div>
                <div class="col-lg-2 mx-auto info_col">
                    <div class="info_link_box">
                        <h4>Trang</h4>
                        <div class="info_links">
                            <a class="active" href="@Url.Action("Index", "Home")">Trang chủ</a>
                            <a class="" href="@Url.Action("Index", "OurService")">Dịch vụ</a>
                            <a class="" href="@Url.Action("Index", "AboutUs")">Về chúng tôi</a>
                            <a class="" href="@Url.Action("Index", "Price")">Giá cả</a>
                            <a class="" href="@Url.Action("Index", "ContactUs")">Liên hệ</a>
                        </div>
                    </div>
                </div>
                <div class=" col-lg-3 info_col ">
                    <h4>Đăng ký</h4>
                    <form>
                        <input type="text" placeholder="Nhập email" />
                        <a href="LoginCustomer"><button type="submit">Đăng ký</button></a>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <script type="text/javascript" src="~/js/jquery-3.4.1.min.js"></script>
    <script type="text/javascript" src="~/js/bootstrap.js"></script>
    <script src="~/js/search.js"></script>

</body>

</html>